<%= form_for [:admin, @product, @catalogue], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="new_catalogue">
    <legend align="center"><%= Spree.t(:new_catalogue) %></legend>

      <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @catalogue } %>

      <%= render :partial => 'form', :locals => { :f => f } %>
    
      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button Spree.t('actions.update'), 'icon-refresh' %>
        <span class="or"><%= Spree.t(:or) %></span>
        <%= link_to_with_icon 'icon-remove', Spree.t('actions.cancel'), admin_product_catalogues_url(@product), :id => 'cancel_link', :class => 'button' %>
      </div>
  </fieldset>
<% end %>

<%= javascript_include_tag 'admin/catalogues/new.js' %>
