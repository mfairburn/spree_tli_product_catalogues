<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/admin/shared/product_tabs', :locals => { :current => 'Catalogues' } %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @catalogue } %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_catalogues_list), admin_product_catalogues_url(@product), :icon => 'icon-arrow-left' %></li>
<% end %>

<%= form_for [:admin, @product, @catalogue], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="edit_catalogue">
    <legend align="center"><%= @catalogue.attachment_file_name%></legend>
    <div data-hook="thumbnail" class="field alpha three columns align-center">
      <%= f.label Spree.t(:catalogue_link) %><br>
      <%= link_to image_tag(@catalogue.attachment.url(:mini)), @catalogue.attachment.url(:original) %>
    </div>
    <div class="nine columns omega">
      <%= render :partial => 'form', :locals => { :f => f } %>  
    </div>
    <div class="clear"></div>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'icon-refresh' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= link_to Spree.t('actions.cancel'), admin_product_catalogues_url(@product), :id => 'cancel_link', :class => 'button icon-remove' %>
    </div>
  </fieldset>
<% end %>
